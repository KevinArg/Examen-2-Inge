  @model Laboratorio5.Models.ExpendingMachineModel;

<div>
    <table class="table" >
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad disponible</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.supply)
            {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.precio</td>
                    <td>@item.cantidad</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @using (Html.BeginForm("BuyRequest", "ExpendingMachine", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
    <h1>Compra</h1>
    <table class="table" >
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Coca cola</td>
                <td>@Html.TextBoxFor(model => model.transaction.quantCoca, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>Pepsi</td>
                <td>@Html.TextBoxFor(model => model.transaction.quantPepsi, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>Fanta</td>
                <td>@Html.TextBoxFor(model => model.transaction.quantFanta, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>Sprite</td>
                <td>@Html.TextBoxFor(model => model.transaction.quantSprite, new { @class = "form-control" })</td>
            </tr>
        </tbody>
    </table>
    <input type="submit" class="btn btn-success" value="Comprar" />
    }
</div>